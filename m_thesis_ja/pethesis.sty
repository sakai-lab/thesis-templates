\def\triplebox{\VerbBox\@triplebox}
\def\@triplebox#1{%
  \begingroup
    \setbox\@fancybox\hbox{{#1}}%
    \fboxrule=.75\fboxrule
    \setbox\@fancybox\hbox{\fbox{\box\@fancybox}}%
    \fboxrule=2\fboxrule
    \fboxsep=\fboxrule
    \advance\fboxsep .5pt
    \fbox{\setlength{\fboxrule}{.9mm}\fbox{\box\@fancybox}}
  \endgroup}
  
\renewcommand\maketitle{
	\thispagestyle{empty}
